#!/bin/bash

case "$1" in
  check)
    pkg=$(checkupdates | wc -l)
    aur="$(yay -Qua | wc -l)"
    all=$((pkg + aur))
    [[ "$all" == "0" ]] && echo "" && exit 0
    echo "ï†² $all"
    ;;
  upgrade)
    printf "Beggining System Upgrade.\\n"
    yay -Syu
    pidof waybar >/dev/null && pkill -RTMIN+1 waybar
    printf "\\nUpgrade complete.\\nPress <Enter> to exit window.\\n\\n"
    read -r _
    ;;
esac
