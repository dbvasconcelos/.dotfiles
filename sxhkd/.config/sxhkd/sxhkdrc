# sxhkdrc: The Simple X Hotkey Daemon is the program to map keys

#
# wm independent hotkeys
#
# terminal emulator
super + Return
	$TERMINAL

# Browser
super + w
	$BROWSER

# Scratchpad terminal
super + shift + Return
	tdrop -a -n scratchpad -w "50%" -h "50%" -x "25%" -y "25%" $TERMINAL

# File Manager
super + e
	tdrop -a -n filebrowser -w "3000" -h "1500" -x "10%" -y "15%" $TERMINAL "lf"

# Calculator
XF86Calculator
	tdrop -a -n calculator -w "1000" -h "1000" -x "70%" -y "15%" $TERMINAL "bc" "-l"

# System Manager
super + Escape
    tdrop -a -n sysmgr -w "3000" -h "1500" -x "10%" -y "15%" $TERMINAL "btm" "--basic"

# Music Player
super +
    tdrop -a -n sysmgr -w "3000" -h "1500" -x "10%" -y "15%" $TERMINAL "btm" "--basic"

super + F8
    $TERMINAL "ncmpcpp"

# Sessionizer
super + p
    $TERMINAL sessionizer

# X Session Manager
super + BackSpace
	session-manager

# program launcher
super + r
	rofi -show drun -theme simplemenu

super + R
	dmenu_run

# Idle Screen
XF86MonBrightnessDown
	xset dpms force off

# Print Screen
Print
	take-screenshot

# Media Keys
XF86AudioPrev
    playerctl -p mopidy previous
XF86AudioPlay
    playerctl -p mopidy play-pause
XF86AudioNext
    playerctl -p mopidy next

# Volume
XF86AudioMute
	pulseaudio-control togmute
XF86Audio{Raise,Lower}Volume
	pulseaudio-control {up, down}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift +}q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest local node
super + @space
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	{bspc node -f, bspwm_smart_move} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {comma,period}
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {_,shift +} Tab
	bspc {node, desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
