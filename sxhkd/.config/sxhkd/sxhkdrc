# sxhkdrc: The Simple X Hotkey Daemon is the program to map keys

# terminal emulator
super + Return
	$TERMINAL

# Browser
super + w
	$BROWSER

# Scratchpad terminal
super + shift + Return
	tdrop -a -n scratchpad -w "50%" -h "50%" -x "25%" -y "25%" $TERMINAL

# File Manager
super + e
	tdrop -a -n filebrowser -w "3000" -h "1500" -x "10%" -y "15%" $TERMINAL "lf"

# Calculator
XF86Calculator
	tdrop -a -n calculator -w "1000" -h "1000" -x "70%" -y "15%" $TERMINAL "bc" "-l"

# System Manager
super + Escape
    tdrop -a -n sysmgr -w "3000" -h "1500" -x "10%" -y "15%" $TERMINAL "btm" "--basic"

# Music Player
super + m
    $TERMINAL "ncmpcpp"

super + F8
    $TERMINAL "ncmpcpp"

# Sessionizer
super + p
    $TERMINAL sessionizer

# X Session Manager
super + BackSpace
	powermenu

# program launcher
super + r
	rofi -show drun -theme launcher

super + R
	dmenu_run

# Idle Screen
XF86MonBrightnessDown
	xset dpms force off

# Print Screen
Print
	take-screenshot

# Media Keys
XF86AudioPrev
    playerctl -p mopidy previous
XF86AudioPlay
    playerctl -p mopidy play-pause
XF86AudioNext
    playerctl -p mopidy next

# Volume
XF86AudioMute
	pulseaudio-control togmute
XF86Audio{Raise,Lower}Volume
	pulseaudio-control {up, down}
