#!/bin/sh

# Receives an options string formatted as:
# option-name: simple-command
# then prompt the user for which option to run its command on dmenu
# optionally may receive the prompt string as second argument

[ -z "$1" ] && exit 1
choice="$(echo "$1" | cut -d: -f1 | dmenu -r -i -p "$2")" || exit 1

readonly command_to_execute="$(echo "$1" | grep "^$choice:" | cut -d: -f2)"
$command_to_execute
