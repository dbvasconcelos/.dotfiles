# Shell aliases definition

# Use neovim for vim
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Use exa for ls
[ -x "$(command -v exa)" ] && alias ls="exa --icons --color=always --group-directories-first"

# use paru for pacman
[ -x "$(command -v paru)" ] && alias pacman="paru"

# use ripgrep for grep
[ -x "$(command -v rg)" ] && alias grep="rg"

# use bat for cat
[ -x "$(command -v bat)" ] && alias cat="bat"

# fix ssh for kitty
alias ssh="kitty +kitten ssh"

# all-in-one unzip utility
alias extract="aunpack"

# Verbosity
alias cp="advcp -giv"
alias mv="advmv -giv"
alias rm="rm -vI"
alias trash="trash-put -f"
alias mkdir="mkdir -pv"

# Colorization
alias diff="diff --color=auto"

# remove orphaned packages
alias autoremove='if [ -z "$(paru -Qtdq)" ]; then echo "no orphan packages"; else paru -Rns $(paru -Qtdq); fi'

# get error messages from journalctl
alias jctl="journalctl -p 4 -xb"

# kill all pbs jobs
qdelall="qselect -u $USER | xargs qdel"

# enable correct editor when sudoing
alias sudo="sudo EDITOR=$EDITOR"

# nvidia settings
alias nvidia-settings="nvidia-settings --config /home/derek/.config/nvidia/settings"
