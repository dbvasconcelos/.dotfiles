# Shell aliases definition

# Remove unnecessary sudo for some system commands.
for command in mount umount sv updatedb su shutdown poweroff reboot ; do
	alias $command="sudo $command"
done; unset command

# Use neovim for vim.
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Use exa for ls.
[ -x "$(command -v exa)" ] && alias ls="exa --icons --color=always --group-directories-first"

# use paru for pacman.
[ -x "$(command -v yay)" ] && alias pacman="yay"

# use ripgrep for grep.
[ -x "$(command -v rg)" ] && alias grep="rg"

# use bat for cat.
[ -x "$(command -v bat)" ] && alias cat="bat"

# fix ssh for kitty.
[ -x "$(command -v kitty)" ] && alias ssh="kitty +kitten ssh"

# All-in-one unzip utility.
[ -x "$(command -v aunpack)" ] && alias extract="aunpack"

# Verbosity on remove.
alias rm="rm -vI"

# Verbosity on mkdir.
alias mkdir="mkdir -pv"

# Verbosity on mv/cp.
if [ -x "$(command -v advcp)" ]; then
    alias cp="advcp -giv"
    alias mv="advmv -giv"
else
    alias cp="cp -iv"
    alias mv="mv -iv"
fi

# Verbosity on trash.
[ -x "$(command -v trash-put)" ] && alias trash="trash-put -f"

# Colorization.
alias diff="diff --color=auto"

# remove orphaned packages.
[ -x "$(command -v yay)" ] && alias autoremove='if [ -z "$(yay -Qtdq)" ]; then echo "no orphan packages"; else paru -Rns $(paru -Qtdq); fi'

# get error messages from journalctl.
alias jctl="journalctl -p 4 -xb"

# kill all pbs jobs.
qdelall="qselect -u $USER | xargs qdel"

# enable correct editor when sudoing.
alias sudo="sudo EDITOR=$EDITOR"

# nvidia settings.
[ -x "$(command -v nvidia-settings)" ] && alias nvidia-settings="nvidia-settings --config /home/derek/.config/nvidia/settings"

# pacdiff.
alias pacdiff="sudo -E pacdiff"
