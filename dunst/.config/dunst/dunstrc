# dunstrc: notification settings.

[global]
    follow = keyboard
    width = 370
    height = 350
    offset = 5x55
    frame_width = 1
    corner_radius = 7
    frame_color = "#d4be98"
    separator_color = auto
    font = monospace 12
    icon_path = /usr/share/icons/Gruvbox-Material-Dark/64x64/devices/:/usr/share/icons/Papirus-Dark/64x64/places/:/usr/share/icons/Papirus-Dark/64x64/categories/:/usr/share/icons/Papirus-Dark/64x64/mimetypes/:/usr/share/icons/Papirus-Dark/64x64/apps/
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[urgency_low]
    background = "#32302f"
    foreground = "#d4be98"
    icon = /usr/share/icons/Gruvbox-Material-Dark/32x32/status/dialog-information.svg
    timeout = 3

[urgency_normal]
    background = "#32302f"
    foreground = "#d4be98"
    icon = /usr/share/icons/Gruvbox-Material-Dark/32x32/status/dialog-warning.svg
    timeout = 5

[urgency_critical]
    background = "#32302f"
