#!/bin/sh
# Reinstalls Battle.net client

url="https://www.battle.net/download/getInstallerForGame?os=win&gameProgram=BATTLENET_APP&version=Live&id=undefined"
progra2="$WINEPREFIX/drive_c/Program Files (x86)"
appdata="$WINEPREFIX/drive_c/user/derek/AppData"

wine uninstaller
rm -rfv "$progra2/Battle.net/"
rm -rfv "$progra2/Hearthstone/"
rm -rfv "$appdata/Local/Battle.net/"
rm -rfv "$appdata/Local/Blizzard*"
rm -rfv "$appdata/LocalLow/Blizzard*"
wget -O Battle.net-Setup.exe "$url"
wine Battle.net-Setup.exe
rm Battle.net-Setup.exe
